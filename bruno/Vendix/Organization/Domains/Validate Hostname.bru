meta {
  name: Validate Hostname
  type: http
  seq: 3
}

post {
  url: {{url}}/organization/domains/validate-hostname
  body: json
}

body:json {
  {
    "hostname": "test-domain.vendix.com"
  }
}

tests {
  test("Hostname validated successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body).to.have.property('success', true);
    expect(res.body).to.have.property('data');
  });

  test("Validation result contains expected fields", function() {
    expect(res.body.data).to.have.property('is_valid');
    expect(res.body.data).to.have.property('hostname');
  });
}