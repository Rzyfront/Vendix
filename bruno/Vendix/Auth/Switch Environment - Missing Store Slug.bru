meta {
  name: Switch Environment - Missing Store Slug
  type: http
  seq: 4
}

post {
  url: http://{{url}}/auth/switch-environment
  body: json
  auth: bearer
}

body:json {
  {
    "target_environment": "STORE_ADMIN"
  }
}

tests {
  test("Error when store_slug is missing for STORE_ADMIN", function() {
    expect(res.status).to.equal(400);
    expect(res.body.message).to.include('Se requiere el slug de la tienda');
  });
}