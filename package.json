{
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "// ----- WORKSPACES -----": "",
    "install:all": "npm install -ws",
    "// ----- DEVELOPMENT -----": "",
    "dev": "npm run start:dev -w apps/backend & npm run start -w apps/frontend",
    "// ----- BUILD -----": "",
    "build": "npm run build -w apps/backend && npm run build:prod -w apps/frontend",
    "// ----- CODE QUALITY -----": "",
    "lint": "npm run lint -ws",
    "format": "npm run format -ws",
    "// ----- DATABASE (Backend) -----": "",
    "db:reset-seed": "npm run db:reset -w apps/backend && npm run db:seed -w apps/backend",
    "// ----- DOCKER -----": "",
    "docker:up": "docker compose up -d",
    "docker:rebuild": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:down-v": "docker compose down --volumes"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  }
}